=form_for :jobs do |f|
  .form-group.row
    =f.label :front_image, class: 'col-sm-2 col-form-label'
    .col-sm-10
      =f.file_field :front_image, class: 'form-control', placeholder: 'Nome do quadro...'
  .form-group.row
    =f.label :name, class: 'col-sm-2 col-form-label'
    .col-sm-10
      =f.text_field :name, class: 'form-control', placeholder: 'Nome do quadro...'
  .form-group.row
    .col-sm-10
      =f.submit t('actions.create'), class: 'btn btn-secondary btn-sm'
